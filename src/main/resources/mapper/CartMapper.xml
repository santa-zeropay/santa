<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.web.mapper.CartMapper">
	<select id="getTempCartList"
		resultType="com.spring.web.dto.MenuCartDto">
		SELECT menuname,price,count FROM menu join cart on menu.id=cart.menu_id;
	</select>
		<select id="getCartList"
		resultType="com.spring.web.dto.MenuCartDto">
		SELECT menuname,price,count FROM menu join cart on menu.id=cart.menu_id where cart.user_id=#{id};
	</select>
	<insert id="cartEnroll">
		insert into cart(id,user_id,menu_id)
		values (#{id},#{user_id},#{menu_id})
	</insert>

</mapper>	